<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ScrollViewLayout"
    android:background="@color/white">

    <view class="fr.wetstein.mycv.view.GuestbookView" android:visibility="visible"
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" android:background="@android:color/white" />

    <view class="fr.wetstein.mycv.view.DrawSettingsView" android:visibility="visible"
        android:id="@+id/draw_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@android:color/white" />

</LinearLayout>